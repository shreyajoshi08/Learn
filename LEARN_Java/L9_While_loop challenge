public class digit_sum_challenge {
    public static void main(String[] args) {
        //body
        System.out.println(sumDigits(0));
    }
    public static int sumDigits(int num){
        int sum = 0;
        if(num<0){
            sum= -1;
        } else if (num == 0) {
            return 0;
        } else{
            while(num!=0){
                sum = sum+(num%10);
                num = num/10;
            }
        }
        return sum;
    }
}

